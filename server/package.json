{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "JoaoPauloCMarra <joaopaulocmarra@gmail.com> (http://webnexus.com.br/)",
  "license": "MIT",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.ts --verbose",
    "format": "prettier \"**/*.{ts,md}\" --check --write",
    "lint": "eslint . --ext ts,.graphql --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "ci": "npm-run-all codegen format lint test",
    "dev": "set NODE_ENV=development && nodemon --watch \"src/*.*\" --exec \"ts-node\" ./src/index.ts",
    "start": "set NODE_ENV=production && nodemon --watch \"src/*.*\" --exec \"ts-node\" ./src/index.ts"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": ".test.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-import-node": "^0.0.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.13.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "apollo-server-testing": "^2.25.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
